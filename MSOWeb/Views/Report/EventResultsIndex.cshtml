@using MSOCore.Extensions;
@using MSOCore.Reports;
@model IEnumerable<EventResultsGenerator.EventsIndexEventVm>
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h1 class="bd-title" id="content">Live Event Results</h1>

<div class="list-group">
    @foreach (var evt in Model)
    {
    <a href="/Report/EventResults?eventCode=@evt.Code" class="list-group-item list-group-item-action disabled">
        @evt.Code : @evt.Name
        @if (evt.HasResults)
        {
            <span class="badge badge-success badge-pill">Ready!</span>
        }
        @if (evt.Started && !evt.Finished)
        {
            <span class="badge badge-danger badge-pill">In Play</span>
        }
        @if (evt.Finished && !evt.HasResults)
        {
            <span class="badge badge-danger badge-pill">Results in preparation</span>
        }
    </a>
    }
</div>
