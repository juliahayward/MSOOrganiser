@{
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    @if (TempData["AutoRefresh"] != null)
    {
        <meta http-equiv="refresh" content="300" />
    }
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Julia Hayward">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="/Content/favicon.ico">
    <!-- Bootstrap 4 styling -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    @if (Request.Params["embedded"] == "true")
    {
        <link rel="stylesheet" href="/Content/Styles/EmbeddedOverrides.css">
    }
    <style type="text/css" id="custom-background-css">
        body {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body class="">
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="/">MSO Online Results</a>
        @if (string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
        {
            <button class="btn btn-outline-success my-2 my-sm-0" id="adminLogin">Admin login</button>
        }
        else
        {
            <button class="btn btn-success my-2 my-sm-0" id="adminLogout">@HttpContext.Current.User.Identity.Name (logout)</button>
        }
    </nav>
    <div id="page" class="container">
        @RenderBody()
    </div>
    @RenderSection("footer")
    <!-- Bootstrap 4 scripts -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="/Scripts/navbar.js"></script>
</body>
</html>
