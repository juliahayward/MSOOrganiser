@model MSOCore.Reports.ScheduleGenerator.DayScheduleVm
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Mind Sports Olympiad : Schedule";
}

<h1>MSO Schedule : @Model.Date</h1>

    <div class="row">
        <div class="col-sm-12">
            <div class="card mt-1">
                @*<div class="card-header">
                    <b>@day.Date</b>
                </div>*@
                <ul class="list-group list-group-flush">
                    @foreach (var evt in Model.Events)
                    {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @evt.Times : @evt.Name
                        @if (evt.Location != null)
                        {
                            <br /><span>@evt.Location</span>
                        }
                    </li>
                    }
                    @if (!Model.Events.Any())
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            No events today
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>